<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="start" controller="InterfaceController.StartScreenController">
        <layer id="layer0" childLayout="center">
            <panel id="startPanel" height="100%" backgroundColor="#d269" width="45%" align="right" childLayout="absolute" valign="center">  
                <control name="button" id="start" height="15.0%" width="90.0%" label="Begin" childLayout="center" y="30%" x="5.0%">
                    <interact onClick="startButton()" />
                </control>
                 <effect>          
                    <onStartSceeen name="fade" length="10000"/>        
                 </effect> 
                 <effect>          
                    <onEndScreen name="fade" length="10000"/>        
                 </effect> 
            </panel>
        </layer>
    </screen>
</nifty>

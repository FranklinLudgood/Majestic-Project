<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="OutOfGameScreen" controller="InterfaceController.OutOfGameScreensController">
        <layer id="GLayer0" childLayout="absolute">
            <panel id="OutOfGameStatsPanel" height="40%" backgroundColor="#00008b" width="45%" childLayout="vertical" y="0%" x="55%">
                <control name="label" id="WelcomeLabel" text="Welcome to Majestic!"/>
                <control name="label" id="NameLabel" text="Name"/>
                <control name="label" id="TotalPointsLabel" text="Total Score:"/>
                <control name="label" id="TotalHealthLostLabel" text="Total Health Lost"/>
                <control name="label" id="TotalHealthRecoveredLabel" text="Total Health Recovered"/>
                <control name="label" id="TotalAirTimeLabel" text="Total Air Time"/>
                <control name="label" id="WinLoseRatioLabel" text="Win Lose Ratio"/>
            </panel>
            <panel id="OutOfStateButtonPanel" height="60%" backgroundColor="#00008b" width="45%" childLayout="absolute" y="40%" x="55%">
                <control name="button" id="settings" height="20.0%" width="40.0%" label="Profile Settings" childLayout="center" y="5.0%" x="5.0%">
                    <interact onClick="settingsButton()" />
                </control>
                <control name="button" id="play" height="20.0%" width="40.0%" label="Play!" childLayout="center" y="5.0%" x="55.0%> 
                </control>
                <control name="button" id="loadProfile" height="20.0%" width="40.0%" label="Load new Profile" childLayout="center" y="55.0%" x="30.0%">
                    <interact onClick="loadProfileButton()" />
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
